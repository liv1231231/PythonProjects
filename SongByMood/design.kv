<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: "20sp"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.success(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3,0.5
                    pos_hint: {'center_x': 0.5,'center_y':0.6}
            Label:
                id: login_failed
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2,0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text: "SIGN UP TO BE A TERMINATOR!"
                on_press: root.sign_up()
                font_size: "13sp"
                background_color: 1,1,1,0
                opacity: 1 if self.state=='normal' else 0.5
                color: 0.1,0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 15,15
        spacing: 20,20
        Label:
            text: "Sign up to Terminator Matan's app"
        TextInput:
            id: username
            hint_text: "New Terminator username"
        TextInput:
            id: password
            hint_text: "New Terminator password"
        Button:
            text: "Press here to get your first new Terminator account activated"
            on_press: root.add_user(root.ids.username.text , root.ids.password.text)
        GridLayout:
            cols: 1
            Button:
                text: "Main menu"
                font_size: 25
                on_press: root.login_screen()


<SuccessScreen>:
    GridLayout:
        cols:1
        padding: 15,15
        spacing: 20,20
        Label:
            text: "Hello Terminator, how do you feel?"
        TextInput:
            id: userfeeling
            hint_text: "happy,sad,nostalgic"
        Button:
            text: "Get an advice to be a real TERMINATOR"
            on_press: root.emotion()
        Label:
            id:advice
            text: ""
            markup: True
        RelativeLayout:
            ImageButton:
                on_press: root.mainmenu()
                source: 'logout_hover.png' if self.hovered else "logout_nothover.png"
                size_hint: 0.35,0.35
                pos_hint: {'center_x': 0.85, 'center_y':0.2}


<SignedUp>:
    GridLayout:
        cols:1
        Label:
            text: "Signed up to terminator's family successfully <3"
        Button:
            text: "Log in to your new account"
            on_press: root.mainmenu()

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SuccessScreen:
        name: "success"
    SignedUp:
        name: "signedup"